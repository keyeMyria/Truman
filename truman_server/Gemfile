  # Twitter Bootstrap Gem
  gem "twitter-bootstrap-rails"
  gem 'less-rails-bootstrap'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

